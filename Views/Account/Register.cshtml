@model MeetingManagement.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = @ViewData["Title"];
    Layout = "_LayoutLogin";
}
<div class="container">

    <form class="login-form" method="post">
        <div class="login-wrap">
            <p class="login-img"><i class="icon_lock_alt"></i></p>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_profile"></i></span>
                <input asp-for="UserName" class="form-control" placeholder="@localizer["User Name"]" autofocus>
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>

            <div class="input-group">
                <span class="input-group-addon"><i class="icon_profile"></i></span>
                <input asp-for="Email" class="form-control" placeholder="@localizer["Email Address"]">
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>

            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <input asp-for="PhoneNumber" class="form-control" placeholder="@localizer["Phone Number"]">
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <input asp-for="UserId" class="form-control" placeholder="@localizer["User ID"]">
            </div>
            <span asp-validation-for="UserId" class="text-danger"></span>

            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <input asp-for="Password" class="form-control" placeholder="@localizer["Password"]">
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>

            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="@localizer["Confirm Password"]">
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            <button class="btn btn-primary btn-lg btn-block" type="submit" asp-action="Register" asp-controller="Account">@localizer["Register"]</button>
            <button class="btn btn-info btn-lg btn-block" type="submit" asp-action="Login" asp-controller="Account">@localizer["Login"]</button>
        </div>
    </form>
</div>