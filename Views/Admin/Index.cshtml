@{
    ViewData["Title"] = @ViewData["Title"];
    Layout = "_LayoutAdmin";
}

<h2>
    @localizer["Admin Page"]
</h2>

<section class="d-flex flex-wrap">
    <!--overview start-->
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <div class="info-box dark-bg">
                <i class="fa fa-thumbs-o-up"></i>
                <div class="count"> @localizer["Waiting Books"] </div>
                <div class="title"> @localizer["Operations"] </div>
                <div class="fc-content"> @localizer["You Can Show All Waiting Reservations And Can Accept Or Reject Resrvation"] </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <div class="info-box red-bg">
                <i class="fa fa-thumbs-o-up"></i>
                <div class="count"> @localizer["Accepted Books"] </div>
                <div class="title"> @localizer["Operations"] </div>
                <div class="fc-content"> @localizer["You Can Show All Accepted Reservations"] </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <div class="info-box twitter-bg">
                <i class="fa fa-thumbs-o-up"></i>
                <div class="count"> @localizer["Rejected Books"] </div>
                <div class="title"> @localizer["Operations"] </div>
                <div class="fc-content"> @localizer["You Can Show All Rejected Reservations And You Can Delete It"] </div>
            </div>
        </div>
    </div>
</section>
