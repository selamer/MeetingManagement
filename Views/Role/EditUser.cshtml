@model MeetingManagement.ViewModel.EditUserViewModel
@{
    ViewData["Title"] = @ViewData["Title"];
    Layout = "_LayoutAdmin";
}
<h1> @localizer["Edit User"] </h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditUser" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group row">
                <label asp-for="UserName" class="col-sm-2 col-form-label"> @localizer["User Name"]</label>
                <div class="col-sm-10">
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"> @localizer["Email"] </label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"> @localizer["Phone Number"] </label>
                <div class="col-sm-10">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UserId" class="col-sm-2 col-form-label"> @localizer["User ID"] </label>
                <div class="col-sm-10">
                    <input asp-for="UserId" class="form-control" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All"></div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary"> @localizer["Save"] </button>
                    <a asp-action="ListUsers" class="btn btn-primary"> @localizer["Cancel"] </a>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3> @localizer["User Roles"] </h3>
                </div>
                <div class="card-body">
                    @if (!Model.Roles.Any())
                    {
                        <h5 class="card-title"> @localizer["None At The Moment ..!"] </h5>
                    }
                    else
                    {
                        foreach (var role in Model.Roles)
                        {
                            <h5 class="card-title">@role</h5>
                        }
                    }
                </div>
                <div class="card-footer">
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <a asp-action="index" class="btn btn-primary"> @localizer["Manage Role"] </a>
                            <a class="btn btn-warning" asp-action="ListUsers"> @localizer["Back To Users"] </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<hr />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
