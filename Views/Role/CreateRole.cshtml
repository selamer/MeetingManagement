@model MeetingManagement.ViewModel.RoleViewModel

@{
    ViewData["Title"] = @ViewData["Title"];
    Layout = "_LayoutAdmin";
}
<h1> @localizer["Create Role"] </h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"> @localizer["Role Name"] </label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"> @localizer["Save"] </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> @localizer["Back To Roles"] </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
