@model MeetingManagement.ViewModel.BookViewModel

@{
    ViewData["Title"] = @ViewData["Title"];
}

<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a asp-action="Index" asp-controller="Building" class="stext-109 cl8 hov-cl1 trans-04">
            @localizer["Home"]
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            @localizer["Reservation Data"]
        </span>
    </div>
</div>

<div class="bg0 p-t-75 p-b-85">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                <div class="bor10 p-lr-40 p-t-30 p-b-40 m-lr-0-xl p-lr-15-sm">
                    <form form asp-action="BookRoom" method="post">
                        <h4 class="mtext-109 cl2 p-b-20">
                            @localizer["Book A Meeting"]
                        </h4>
                        <div class="flex-w flex-t bor12 p-t-15 ">
                            <div class="size-219 p-r-0-sm w-full-ssm">
                                <div class="p-t-15">
                                    <span class="stext-112">
                                        @localizer["Choose Time"] :
                                    </span>
                                    <hr />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" value="@Model.ConferenceRoom_ID" name="ConferenceRoom_ID" />

                                    <label asp-for="@Model.Date" class="stext-111 plh3 size-111 p-lr-15"> @localizer["Date"] </label>
                                    <div class="bor8 bg0 m-b-12">
                                        <input asp-for="@Model.Date" value="" class="stext-111 cl8 plh3 size-111 p-lr-15" placeholder=" @localizer["Date"] " required>
                                        <span asp-validation-for="@Model.Date" class="text-danger"></span>
                                    </div>

                                    <label asp-for="@Model.StartTime" class="stext-111 plh3 size-111 p-lr-15"> @localizer["Start Time"] </label>
                                    <div class="bor8 bg0 m-b-22">
                                        <input asp-for="@Model.StartTime" value="" class="stext-111 cl8 plh3 size-111 p-lr-15" placeholder=" @localizer["Start Time"] " required>
                                        <span asp-validation-for="@Model.StartTime" class="text-danger"></span>
                                    </div>

                                    <label asp-for="@Model.EndTime" class="stext-111 plh3 size-111 p-lr-15"> @localizer["End Time"] </label>
                                    <div class="bor8 bg0 m-b-22">
                                        <input asp-for="@Model.EndTime" value="" class="stext-111 cl8 plh3 size-111 p-lr-15" placeholder=" @localizer["End Time"] " required>
                                        <span asp-validation-for="@Model.EndTime" class="text-danger"></span>
                                    </div>

                                    <label asp-for="@Model.NumOfVisitors" class="stext-111 plh3 size-111 p-lr-15"> @localizer["Number Of Visitors"] </label>
                                    <div class="bor8 bg0 m-b-22">
                                        <input asp-for="@Model.NumOfVisitors" class="stext-111 cl8 plh3 size-111 p-lr-15" placeholder=" @localizer["Number Of Visitors"] " required>
                                        <span asp-validation-for="@Model.NumOfVisitors" class="text-danger"></span>
                                    </div>

                                    <label asp-for="@Model.ExternalVisitors" class="stext-111 plh3 size-111 p-lr-15"> @localizer["Number Of External Visitors"] </label>
                                    <div class="bor8 bg0 m-b-22">
                                        <input asp-for="@Model.ExternalVisitors" class="stext-111 cl8 plh3 size-111 p-lr-15" placeholder=" @localizer["Number Of External Visitors"] " required>
                                        <span asp-validation-for="@Model.ExternalVisitors" class="text-danger"></span>
                                    </div>

                                    <label asp-for="@Model.Additions" class="stext-111 plh3 size-111 p-lr-15"> @localizer["Additional Services"] </label>
                                    <div class="bor8 bg0 m-b-22">
                                        @foreach (var item in ViewBag.Additions)
                                        {
                                            <div class="form-check m-l-25">
                                                <input class="form-check-input" type="checkbox" name="Additions[]" value="@item.Additions_ID" id="@item.Additions_ID">
                                                <label class="form-check-label" for="@item.Additions_ID">
                                                    @item.Name
                                                </label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer"> @localizer["Save"] </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
