@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Web.Common;

@model IPagedList<MeetingManagement.ViewModel.VisitorViewModel>
@{
    ViewData["Title"] = @ViewData["Title"];
}

<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a asp-action="Index" asp-controller="Building" class="stext-109 cl8 hov-cl1 trans-04">
            @localizer["Home"]
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            @localizer["Visitors Data"]
        </span>
    </div>
</div>

<div class="container mt-5">
    <div class="row d-flex justify-content-center align-items-center">
        @foreach (var item in Model)
        {
            <div class="row">
                <form asp-action="AddVisitor" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@item.Book_Id" value="@ViewBag.BookId" name="Book_Id" />
                    <h4 class="mtext-109 cl2 p-b-20">
                        @ViewBag.VisitorNum
                    </h4>
                    <div class="form-group">
                        <label asp-for="@item.Name" class="control-label"> @localizer["Name"] </label>
                        <input asp-for="@item.Name" class="form-control" name="Name" />
                        <span asp-validation-for="@item.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@item.Email" class="control-label"> @localizer["Email"] </label>
                        <input asp-for="@item.Email" class="form-control" name="Email" />
                        <span asp-validation-for="@item.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@item.PhoneNumber" class="control-label"> @localizer["Phone Number"] </label>
                        <input asp-for="@item.PhoneNumber" class="form-control" name="PhoneNumber" />
                        <span asp-validation-for="@item.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@item.Nationality" class="control-label"> @localizer["Nationality"] </label>
                        <input asp-for="@item.Nationality" class="form-control" name="Nationality" />
                        <span asp-validation-for="@item.Nationality" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@item.SSN" class="control-label"> @localizer["SSN"] </label>
                        <input asp-for="@item.SSN" class="form-control" name="SSN" />
                        <span asp-validation-for="@item.SSN" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@item.ImageSSN" class="control-label"> @localizer["Image SSN"] </label>
                        <input type="file" asp-for="@item.ImageSSN" class="form-control" name="ImageSSN" />
                        <span asp-validation-for="@item.ImageSSN" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@item.Employer" class="control-label"> @localizer["Employer"] </label>
                        <input asp-for="@item.Employer" class="form-control" name="Employer" />
                        <span asp-validation-for="@item.Employer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@item.JobTitle" class="control-label"> @localizer["Job Title"] </label>
                        <input asp-for="@item.JobTitle" class="form-control" name="JobTitle" />
                        <span asp-validation-for="@item.JobTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@item.Vaccine" class="control-label"> @localizer["Vaccine"] </label>
                        <input asp-for="@item.Vaccine" class="form-control" name="Vaccine" />
                        <span asp-validation-for="@item.Vaccine" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@item.ImageVaccine" class="control-label"> @localizer["Image Vaccine"] </label>
                        <input type="file" asp-for="@item.ImageVaccine" class="form-control" name="ImageVaccine" />
                        <span asp-validation-for="@item.ImageVaccine" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer"> @localizer["Save"] </button>
                    </div>
                    <div class="form-group">
                        <a asp-action="Details" asp-route-id="@ViewBag.Room_Id" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                            @localizer["Skip"]
                        </a>
                    </div>
                </form>
            </div>
        }
    </div>
</div>
<div class="flex-c-m flex-w w-full p-t-45">
    @Html.PagedListPager(Model, Page => Url.Action("ExVisitors", new { Page = Page }))
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}