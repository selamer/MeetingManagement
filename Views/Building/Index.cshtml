@model IEnumerable<Building>
@{
    ViewData["Title"] = @ViewData["Title"];
}

<!-- Breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a asp-action="Index" class="stext-109 cl8 hov-cl1 trans-04">
            @localizer["Home"]
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>
        <span class="stext-109">
            @localizer["Buildings"]
        </span>
    </div>
</div>

<!-- Buildings -->
<div class="bg0 m-t-23 p-b-140">
    <div class="container">
        <div class="flex-w flex-sb-m p-b-52">
            <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                <a asp-action="Index" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
                    @localizer["All Buildings"]
                </a>
                @foreach (var item in Model)
                {
                    <a asp-action="Index" asp-controller="Room" asp-route-id="@item.Building_ID" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">
                        @item.Name
                    </a>
                }
            </div>
            <div class="flex-w flex-c-m m-tb-10">
                <div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
                    <i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
                    <i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                    @localizer["Search ..."]
                </div>
            </div>
            <!-- Search Building -->
            <div class="dis-none panel-search w-full p-t-10 p-b-15">
                <div class="bor8 dis-flex p-l-15">
                    <form asp-action="BuildingSearch" style="display:flex ; width:100%">
                        <button type="submit" class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                            <i class="zmdi zmdi-search"></i>
                        </button>
                        <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="Name" placeholder="@localizer["Search ..."]">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Buildings -->
    <div class="sec-banner bg0">
        <div class="flex-w flex-c-m">
            @foreach (var item in Model)
            {
                <div class="size-202 m-lr-auto respon4">
                    <div class="block1 wrap-pic-w">
                        <img src="~/images/Categories/@item.Image" width="395" height="266" alt="IMG-BANNER">
                        <a asp-action="Index" asp-controller="Room" asp-route-id="@item.Building_ID" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
                            <div class="block1-txt-child1 flex-col-l">
                                <span class="block1-name ltext-102 trans-04 p-b-8">
                                    @item.Name
                                </span>
                            </div>
                            <div class="block1-txt-child2 p-b-4 trans-05">
                                <div class="block1-link stext-101 cl0 trans-09">
                                    @localizer["Book Conference Room"]
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
