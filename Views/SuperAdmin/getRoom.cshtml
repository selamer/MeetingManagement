@model IEnumerable<MeetingManagement.Models.ConferenceRoom>

@{
    ViewData["Title"] = @ViewData["Title"];
    Layout = "_LayoutAdmin";
}
<h1> @localizer["All Rooms"] </h1>
<a asp-action="AddRoom" class="btn btn-success" style="width:auto"> @localizer["Create Room"] </a>


<table class="table">
    <thead>
        <tr>
            <th scope="col"> @localizer["Conference Room Name"] </th>
            <th scope="col"> @localizer["Conference Room Photo"] </th>
            <th scope="col"> @localizer["Capacity"] </th>
            <th scope="col"> @localizer["Building Name"] </th>
            <th scope="col"> @localizer["Operations"] </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">  @Html.DisplayFor(modelItem => item.Name) </td>
                <td> <img src="~/images/@item.Image" alt="Alternate Text" width="50" height="50" /> </td>
                <td> @Html.DisplayFor(modelItem => item.Capacity) </td>
                <td> @Html.DisplayFor(modelItem => item.Building.Name) </td>
                <td>
                    <a class="btn btn-primary" asp-action="EditRoom" asp-route-id="@item.ConferenceRoom_ID"> @localizer["Edit"] </a> |
                    <a class="btn btn-danger" asp-action="DeleteRoom" asp-route-id="@item.ConferenceRoom_ID"> @localizer["Delete"] </a>
                </td>
            </tr>
        }
    </tbody>
</table>
