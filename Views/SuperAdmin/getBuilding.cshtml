@model IEnumerable<MeetingManagement.Models.Building>

@{
    ViewData["Title"] = @ViewData["Title"];
    Layout = "_LayoutAdmin";
}

<h1> @localizer["All Buildings"] </h1>
<a class="btn btn-success" asp-action="AddBuilding" style="width:auto"> @localizer["Create Building"] </a>

<table class="table">
    <thead>
        <tr>
            <th scope="col"> @localizer["Building Name"] </th>
            <th scope="col"> @localizer["Location"] </th>
            <th scope="col"> @localizer["Operations"] </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row"> @Html.DisplayFor(modelItem => item.Name) </td>
                <td> @Html.DisplayFor(modelItem => item.Location) </td>
                <td>
                    <a class="btn btn-primary" asp-action="EditBuilding" asp-route-id="@item.Building_ID"> @localizer["Edit"] </a> |
                    <a class="btn btn-danger" asp-action="DeleteBuilding" asp-route-id="@item.Building_ID"> @localizer["Delete"] </a>
                </td>
            </tr>
        }
    </tbody>
</table>
